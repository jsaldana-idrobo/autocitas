---
import "../../styles/global.css";
import { BookingApp } from "../../components/booking/BookingApp";
const { slug, resource } = Astro.params;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reserva tu cita</title>
  </head>
  <body class="min-h-screen text-slate-900">
    <main class="mx-auto flex min-h-screen max-w-6xl flex-col px-6 py-6">
      {slug ? (
        <BookingApp slug={slug} resourceIdentifier={resource} client:load />
      ) : (
        <div class="card p-6">Slug invalido.</div>
      )}
    </main>
  </body>
</html>
