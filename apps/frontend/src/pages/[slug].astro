---
import "../styles/global.css";
import { BookingApp } from "../components/booking/BookingApp";
const { slug } = Astro.params;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reservas Â· Autocitas</title>
  </head>
  <body class="min-h-screen text-slate-900">
    <main class="mx-auto flex min-h-screen max-w-6xl flex-col px-6 py-6">
      <section class="mb-6">
        <h1 class="mt-2 text-2xl font-semibold tracking-tight text-slate-900 md:text-3xl">
          Autoagenda tu cita
        </h1>
        <p class="mt-2 max-w-2xl text-sm text-slate-600 md:text-base">
          Elige servicio, fecha y hora. Confirmamos tu reserva en segundos.
        </p>
      </section>
      {slug ? <BookingApp slug={slug} client:load /> : <div class="card p-6">Slug invalido.</div>}
    </main>
  </body>
</html>
