---
import "../styles/global.css";
import { BookingApp } from "../components/booking/BookingApp";
const { slug } = Astro.params;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reservas Â· Autocitas</title>
  </head>
  <body class="min-h-screen text-slate-900">
    <main class="mx-auto flex min-h-screen max-w-6xl flex-col px-6 py-16">
      <section class="mb-10">
        <span class="inline-flex items-center gap-2 rounded-full bg-primary-100 px-4 py-1 text-xs font-semibold text-primary-700">
          Reservas
        </span>
        <h1 class="mt-4 text-4xl font-semibold tracking-tight text-slate-900 md:text-5xl">
          Agenda tu cita
        </h1>
        <p class="mt-3 max-w-2xl text-base text-slate-600">
          Elige servicio, fecha y hora. Confirmamos tu reserva en segundos.
        </p>
      </section>
      {slug ? <BookingApp slug={slug} client:load /> : <div class="card p-6">Slug invalido.</div>}
    </main>
  </body>
</html>
